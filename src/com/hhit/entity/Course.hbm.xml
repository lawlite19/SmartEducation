<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.hhit.entity">

	<class name="Course" table="T_Course">
		<id name="id" type="int">
			<column name="Id"></column>
            <generator class="native"/>
		</id>
		<property name="courseName" type="string">	
			<column name="CourseName" length="50">
				<comment>课程名</comment>
			</column>
		</property>
		<property name="courseLevel" type="integer">
			<column name="CourseLevel">
				<comment>课程级别</comment>
			</column>
		</property>
		<property name="addTime" type="timestamp">
			<column name="AddTime">
				<comment>添加时间</comment>
			</column>
		</property>
		<property name="description" type="string">
			<column name="Description">
				<comment>课程介绍</comment>
			</column>
		</property>
		<!-- department属性，本类与Department的多对一   -->
		<many-to-one name="department" class="Department" column="Department_Id">
		</many-to-one>
		<!-- teacher属性，本类与UserDetails的多对一  -->
		<many-to-one name="teacher" class="UserDetails" column="UserDetails_Id">
		</many-to-one>
		<!-- tasks属性，本类与Task的一对多 -->
		<set name="tasks">
			<key column="Course_Id"></key>
			<one-to-many class="Task" />
		</set>
		
		<!-- teachProcesses属性，本类与TeachProcess的一对多 -->
		<set name="teachProcesses">
			<key column="Course_Id"></key>
			<one-to-many class="TeachProcess" />
		</set>
	</class>
</hibernate-mapping>
